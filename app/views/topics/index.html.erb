<div class="row">
  <div class="col-md-12">
    <h1>Topics
    <%= link_to 'New Topic', new_topic_path, class: 'btn btn-primary' %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Created by</th>
        <th>Last edited by</th>
        <th colspan="3">Function</th>
      </tr>
      </thead>

      <tbody>
      <% @topics.each do |topic| %>
          <tr>
            <td><%= topic.title %></td>
            <td><%= topic.description %></td>
            <td><%= topic.created_by.email %></td>
            <td><%= topic.last_edited_by.email %></td>
            <td><%= link_to 'Show', topic, class: 'btn btn-success' %></td>
            <td><%= link_to 'Edit', edit_topic_path(topic), class: 'btn btn-info' %></td>
            <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


